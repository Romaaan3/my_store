<h1 align="center">Items</h1>
<table border = "1" cellspacing="0" cellpadding="2" align="center">
<tr>
	<th>Item id</th>
	<th>Name</th>
	<th>Price</th>
	<th></th>
	<th>Rate</th>
</tr>
<% @items.each do |i| %>
<tr>
  <td><%= i.id %></td>
  <td><%= link_to i.name, item_path(i) %></td>
  <td><%= i.price %> rub</td>
  <td><%= link_to "Delete", i, method: :delete, data: {confirm: "Are you sure?"} %></td>
  <td><%= i.votes_count %>, <%= link_to "+", upvote_item_path(i) %></td>
</tr>
  <% end %>
</table>